{
  "title": "Home row mods + Space layer",
  "rules": [

    {
      "description": "Home row mods",
      "manipulators": [

        {
          "type": "basic",
          "from": { "key_code": "a" },
          "to_if_alone": [{ "key_code": "a" }],
          "to_if_held_down": [{ "key_code": "left_control" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "s" },
          "to_if_alone": [{ "key_code": "s" }],
          "to_if_held_down": [{ "key_code": "left_option" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "d" },
          "to_if_alone": [{ "key_code": "d" }],
          "to_if_held_down": [{ "key_code": "left_command" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "f" },
          "to_if_alone": [{ "key_code": "f" }],
          "to_if_held_down": [{ "key_code": "left_shift" }]
        },

        {
          "type": "basic",
          "from": { "key_code": "j" },
          "to_if_alone": [{ "key_code": "j" }],
          "to_if_held_down": [{ "key_code": "left_shift" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "k" },
          "to_if_alone": [{ "key_code": "k" }],
          "to_if_held_down": [{ "key_code": "left_command" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "l" },
          "to_if_alone": [{ "key_code": "l" }],
          "to_if_held_down": [{ "key_code": "left_option" }]
        },
        {
          "type": "basic",
          "from": { "key_code": "semicolon" },
          "to_if_alone": [{ "key_code": "semicolon" }],
          "to_if_held_down": [{ "key_code": "left_control" }]
        }
      ]
    },

    {
      "description": "Space layer",
      "manipulators": [

        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": { "optional": ["any"] }
          },
          "to_if_held_down": [
            { "set_variable": { "name": "space_layer", "value": 1 } }
          ],
          "to_after_key_up": [
            { "set_variable": { "name": "space_layer", "value": 0 } }
          ],
          "to_if_alone": [
            { "key_code": "spacebar" }
          ]
        },

        {
          "type": "basic",
          "from": { "key_code": "j", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "left_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "space_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "k", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "down_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "space_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "l", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "up_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "space_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "semicolon", "modifiers": { "optional": ["any"] } },
          "to": [{ "key_code": "right_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "space_layer", "value": 1 }
          ]
        },

        {
          "type": "basic",
          "from": { "key_code": "comma" },
          "to": [{ "key_code": "delete_or_backspace" }],
          "conditions": [
            { "type": "variable_if", "name": "space_layer", "value": 1 }
          ]
        },

        {
          "type": "basic",
          "from": { "key_code": "z" },
          "to": [
            { "key_code": "z", "modifiers": ["command"] }
          ],
          "conditions": [
            { "type": "variable_if", "name": "space_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "x" },
          "to": [
            { "key_code": "x", "modifiers": ["command"] }
          ],
          "conditions": [
            { "type": "variable_if", "name": "space_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "c" },
          "to": [
            { "key_code": "c", "modifiers": ["command"] }
          ],
          "conditions": [
            { "type": "variable_if", "name": "space_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "v" },
          "to": [
            { "key_code": "v", "modifiers": ["command"] }
          ],
          "conditions": [
            { "type": "variable_if", "name": "space_layer", "value": 1 }
          ]
        }

      ]
    }

  ]
}
